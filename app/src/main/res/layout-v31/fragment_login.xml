<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginFragment">


    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="171dp"
        android:layout_height="161dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_dishly_logo" />

    <TextView
        android:id="@+id/loginAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginLogo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginAppName"
        android:layout_centerHorizontal="true"
        android:text="@string/app_slogan"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/loginEmailInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/loginSlogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/bg_input_rounded"
        android:drawableStart="@drawable/ic_mail_scaled"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/H_enter_username"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/loginPassInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/loginEmailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:autofillHints="password"
        android:background="@drawable/bg_input_rounded"
        android:drawableStart="@drawable/ic_password_scales"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/H_enter_password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/loginPassInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_green"
        android:text="@string/T_login"
        android:textColor="@color/white"
        app:backgroundTint="@null" />

    <!--   custom  Divider -->
    <LinearLayout
        android:id="@+id/orDividerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/btn_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/divider_text"
            android:textColor="@color/logo_color"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/btn_background" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/orDividerLayout"
        android:layout_centerHorizontal="true"

        android:text="@string/go_with_google"
        android:textColor="@color/black"

        app:backgroundTint="@color/white"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconPadding="8dp"

        app:iconSize="20dp"
        app:iconTint="@null"
        app:strokeColor="@color/btn_background"
        app:strokeWidth="1dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginGuestBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/button_background_white"
        android:text="@string/T_skip"
        android:textColor="@color/black"
        app:backgroundTint="@null" />

    <LinearLayout
        android:id="@+id/doNotHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/googleButton"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"

            />

        <TextView
            android:id="@+id/loginSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/T_sign_up"
            android:textColor="@color/logo_color" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/doNotHaveAccount"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        >



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/meal3"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:alpha="0.5"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/meal1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:alpha="0.5"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/meal2"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:alpha="0.5"
            />
    </LinearLayout>
</RelativeLayout>